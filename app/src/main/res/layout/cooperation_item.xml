<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#90808080" />

    <LinearLayout
        android:id="@+id/cooperation_item_Layout"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:background="#80ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cooperation_item_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="20160613001"
            android:textColor="@color/yuninfo_black_shadow"
            android:textSize="@dimen/list_textSize" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#90808080" />

        <TextView
            android:id="@+id/cooperation_item_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="G20"
            android:textColor="@color/yuninfo_black_shadow"
            android:textSize="@dimen/list_textSize" />


    </LinearLayout>
</LinearLayout>
