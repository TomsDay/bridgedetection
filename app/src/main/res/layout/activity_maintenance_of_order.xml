<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_main_bg"
    tools:context="com.suken.bridgedetection.activity.MaintenanceOfOrderActivity">
    <RelativeLayout
        android:id="@+id/maintenanceoforder_titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/maintenanceoforder_back"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:background="#95323d4b"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="返回"
            android:textColor="#ffffff"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/maintenanceoforder_save"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#95323d4b"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:text="保存"
            android:textColor="#ffffff"
            android:textSize="10dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/maintenanceoforder_bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/maintenanceoforder_jcry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:background="#80ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/maintenanceoforder_jcr_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="巡查人："
                    android:textSize="9dp" />

                <EditText
                    android:id="@+id/maintenanceoforder_jcr_ev"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:background="@drawable/line"
                    android:textColor="#333333"
                    android:textSize="9dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/maintenanceoforder_jlr_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="记录人："
                    android:textSize="9dp" />

                <EditText
                    android:id="@+id/maintenanceoforder_jlr_ev"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:background="@drawable/line"
                    android:textColor="#333333"
                    android:textSize="9dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#40A59F"
            android:text="保存"
            android:gravity="center"
            android:textColor="@color/yuninfo_white"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_below="@id/maintenanceoforder_titleLayout"
        android:layout_above="@id/maintenanceoforder_bottomLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/maintenanceoforder_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#80ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#3ea49d"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/maintenanceoforder_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="高速公路维修保养通知单"
                        android:textColor="#ffffff"
                        android:textSize="10dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/gps_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="GPS定位中..."
                            android:textColor="#ffffff"
                            android:textSize="10dp" />

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/gps_text"
                            android:src="@drawable/list_gps" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/maintenanceoforder_qlbh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/maintenanceoforder_gydw_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="管养单位："
                                android:textSize="9dp" />

                            <EditText
                                android:id="@+id/maintenanceoforder_gydw_ev"
                                android:layout_width="200dp"
                                android:layout_height="20dp"
                                android:background="@drawable/line"
                                android:textColor="#333333"
                                android:textSize="9dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/maintenanceoforder_cxld_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="编号："
                                android:textSize="9dp" />

                            <EditText
                                android:id="@+id/maintenanceoforder_cxld_ev"
                                android:layout_width="200dp"
                                android:layout_height="20dp"
                                android:background="@drawable/line"
                                android:textColor="#333333"
                                android:textSize="9dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/maintenanceoforder_lxbh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/maintenanceoforder_sjd_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="维修部门："
                                android:textSize="9dp" />

                            <EditText
                                android:id="@+id/maintenanceoforder_sjd_ev"
                                android:layout_width="200dp"
                                android:layout_height="20dp"
                                android:background="@drawable/line"
                                android:textColor="#333333"
                                android:textSize="9dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:id="@+id/maintenanceoforder_startTime_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="维修期限："
                                    android:textSize="9dp" />

                                <EditText
                                    android:id="@+id/maintenanceoforder_startTime_ev"
                                    android:layout_width="200dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/line"
                                    android:textColor="#333333"
                                    android:textSize="9dp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <TextView
                                    android:id="@+id/maintenanceoforder_endTime_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="至："
                                    android:textSize="9dp" />

                                <EditText
                                    android:id="@+id/maintenanceoforder_endTime_ev"
                                    android:layout_width="200dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/line"
                                    android:textColor="#333333"
                                    android:textSize="9dp" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                        <LinearLayout
                            android:id="@+id/maintenanceoforder_contentnum_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="15dp"
                            >

                            <TextView
                                android:id="@+id/maintenanceoforder_contentnum_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="维修内容数量："
                                android:textSize="9dp" />

                            <EditText
                                android:id="@+id/maintenanceoforder_contentnum_ev"
                                android:layout_width="200dp"
                                android:layout_height="20dp"
                                android:background="@drawable/line"
                                android:textColor="#333333"
                                android:textSize="9dp" />
                        </LinearLayout>
                    <LinearLayout
                        android:id="@+id/maintenanceoforder_quality_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="15dp"
                        >

                        <TextView
                            android:id="@+id/maintenanceoforder_quality_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="质量要求："
                            android:textSize="9dp" />

                        <EditText
                            android:id="@+id/maintenanceoforder_quality_ev"
                            android:layout_width="200dp"
                            android:layout_height="20dp"
                            android:background="@drawable/line"
                            android:textColor="#333333"
                            android:textSize="9dp" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
