<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#90808080" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#80ffffff">
        <TextView
            android:id="@+id/cl_item_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="20160613001"
            android:textColor="@color/yuninfo_black_shadow"
            android:gravity="center"
            android:textSize="@dimen/list_textSice"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#90808080" />
        <TextView
            android:id="@+id/cl_item_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="G20"
            android:textColor="@color/yuninfo_black_shadow"
            android:gravity="center"
            android:textSize="@dimen/list_textSice"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#90808080" />
        <TextView
            android:id="@+id/cl_item_tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="青银高速公路"
            android:textColor="@color/yuninfo_black_shadow"
            android:textSize="@dimen/list_textSice"
            android:gravity="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#90808080" />


        <EditText
            android:id="@+id/cl_item_tv4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/form_item_bg"
            android:gravity="top"
            android:padding="5dp"
            android:textSize="@dimen/input_contentSice"
            android:imeOptions="actionDone"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#90808080" />

        <TextView
            android:id="@+id/cl_item_tv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/list_textSice"
            android:text="8:30-11:00"
            android:textColor="@color/yuninfo_black_shadow"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#90808080" />

        <Button
            android:id="@+id/cl_item_btn6"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="1.1"
            android:textSize="@dimen/btn_Sice"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/yuninfo_black_shadow"
            />
     



    </LinearLayout>


</LinearLayout>