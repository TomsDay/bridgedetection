<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/from_topLayout"
            android:layout_width="match_parent"
            android:layout_height="20dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical" >

                <TextView
                    android:id="@+id/form_column"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="检查情况："
                    android:textSize="10dp" />




            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical" >

                <LinearLayout
                    android:id="@+id/img_video_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical" >

                    <ImageView
                        android:id="@+id/xiangji"
                        android:padding="5dp"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:src="@drawable/xiangji" />

                    <TextView
                        android:id="@+id/img_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="1"
                        android:textSize="9dp" />

                    <Spinner
                        android:id="@+id/img_spinner"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:spinnerMode="dropdown" />

                    <ImageView
                        android:id="@+id/video"
                        android:padding="5dp"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:src="@drawable/sxj" />

                    <TextView
                        android:id="@+id/video_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="0"
                        android:textSize="9dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/arrow_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:src="@drawable/shang" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/form_item_edit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingRight="40dp" >

                <TextView
                    android:id="@+id/fx_title"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="方  向     ："
                    android:textSize="9dp" />
                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <RadioButton
                        android:id="@+id/radioup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="上行内侧"
                        android:textSize="9dp" >
                    </RadioButton>

                    <RadioButton
                        android:id="@+id/radiodown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下行内侧"
                        android:textSize="9dp" >
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/radioleft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上行外侧"
                        android:textSize="9dp" >
                    </RadioButton>
                    <RadioButton
                        android:id="@+id/radioright"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="下行外侧"
                        android:textSize="9dp" >
                    </RadioButton>
                </RadioGroup>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/item6_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingRight="40dp"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/item6_title"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="桩  号     ："
                    android:textSize="9dp" />

                <EditText
                    android:id="@+id/zh_edit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/form_item_bg"
                    android:gravity="top"
                    android:padding="5dp"
                    android:textSize="9dp"
                    android:imeOptions="flagNoExtractUi"/>



                <ImageView
                    android:id="@+id/item6_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:src="@drawable/menu" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingRight="40dp" >

                <TextView
                    android:id="@+id/qslx_title"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="病害名称："
                    android:textSize="9dp" />

                <EditText
                    android:id="@+id/diseaseName_edit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/form_item_bg"
                    android:gravity="top"
                    android:padding="5dp"
                    android:textSize="9dp"
                    android:imeOptions="flagNoExtractUi"
                    /><!--android:imeOptions="flagNoExtractUi" 可以不用弹出全屏的dialog-->

                <ImageView
                    android:id="@+id/qslx_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:src="@drawable/menu" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingRight="40dp" >

                <TextView
                    android:id="@+id/qsfw_title"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="单  位     ："
                    android:textSize="9dp" />


                <EditText
                    android:id="@+id/unit_edit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/form_item_bg"
                    android:gravity="top"
                    android:padding="5dp"
                    android:textSize="9dp"
                    android:imeOptions="flagNoExtractUi"/>

                <ImageView
                    android:id="@+id/qsfw_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:src="@drawable/menu" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingRight="40dp" >

                <TextView
                    android:id="@+id/byyj_title"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="数  量     ："
                    android:textSize="9dp" />

                <EditText
                    android:id="@+id/count_edit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/form_item_bg"
                    android:gravity="top"
                    android:padding="5dp"
                    android:textSize="9dp"
                    android:imeOptions="flagNoExtractUi"/>

                <ImageView
                    android:id="@+id/byyj_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:src="@drawable/menu" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item4_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingRight="40dp"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/item4_title"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="位  置     ："
                    android:textSize="9dp" />

                <EditText
                    android:id="@+id/address_edit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/form_item_bg"
                    android:gravity="top"
                    android:padding="5dp"
                    android:textSize="9dp"
                    android:imeOptions="flagNoExtractUi"/>



                <ImageView
                    android:id="@+id/item4_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:src="@drawable/menu" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/item5_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingRight="40dp"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/item5_title"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="检查时间："
                    android:textSize="9dp" />

                <EditText
                    android:id="@+id/item_checkTime_edit"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/form_item_bg"
                    android:gravity="top"
                    android:padding="5dp"
                    android:textSize="9dp"

                    />

                <ImageView
                    android:id="@+id/item5_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:src="@drawable/menu" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/item_Line"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        />

</LinearLayout>